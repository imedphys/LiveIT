@model LiveIT.Application.IdentityLoginUserDTO
@using Microsoft.Extensions.Options
@inject IOptions<LiveIT.Security.ReCAPTCHASettings> GoogleReCAPTCHA

@{
    ViewData["Title"] = " ADMIN";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="block-center mt-4 wd-xl">
    <!-- START card-->
    <div class="card card-flat">
        <div class="card-header text-center bg-white">
            <a href="#">
                <img class="block-center" src="~/images/live_it_logo.jpg" style="max-width: 250px;" alt="Image" />
            </a>
        </div>
        <div class="card-body">
            <p class="text-center py-2">Είσοδος στην εφαρμογή LIVE IT</p>
            <form asp-action="Login" class="mb-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <div class="input-group with-focus">
                        <input asp-for="Email" class="form-control border-right-0" type="email" placeholder="Ηλεκτρονική διεύθυνση" required="required" />
                        <div class="input-group-append">
                            <span asp-validation-for="Email" class="input-group-text text-muted bg-transparent border-left-0 text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group with-focus">
                        <input asp-for="Password" class="form-control border-right-0" placeholder="Κωδικός" required="required" />
                        <div class="input-group-append">
                            <span asp-validation-for="Password" class="input-group-text text-muted bg-transparent border-left-0 text-danger"></span>
                        </div>
                    </div>
                </div>
                <input asp-for="Token" type="hidden" />
                <div class="form-group">
                    <input type="submit" value="Σύνδεση" class="btn btn-block btn-primary mt-3" />
                </div>
            </form>
            <br />
        </div>
    </div>
    <br />
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://www.google.com/recaptcha/api.js?render=@GoogleReCAPTCHA.Value.ReCAPTCHA_Site_Key"></script>
    <script>
        grecaptcha.ready(function () {
            grecaptcha.execute('@GoogleReCAPTCHA.Value.ReCAPTCHA_Site_Key', { action: 'homepage' }).then(function (token) {
                console.log(token);
                $('#Token').val(token);
        });
    });
    </script>
}